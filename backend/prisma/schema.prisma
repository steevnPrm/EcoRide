generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}


model User{
  id String @id @default(uuid())
  firstname String
  lastname String
  username String @unique
  email String @unique
  password String 
  isAdmin Boolean @default(false)
  rides Ride[]
}

model Ride{
  id String @id @default(uuid())
  departure String
  arrival String
  createdAt DateTime @default(now())
  owner User @relation(fields: [ownerId] , references: [id])
  ownerId String
}